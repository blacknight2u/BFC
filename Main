import java.util.Scanner;


class BFCAlpha {

    static double Thickness, Width, Length, Boards, Waste, BF, Bank;
    static String Unit="n",BankOption,Save;
    static boolean UnitB, BankOptionB=false, SaveB=false;
    static Scanner BFC = new Scanner(System.in);


    public static void main(String args[]) {

        Info Info = new Info();
        Core Core = new Core();
        int Count = 0;

        Info.Info();

        System.out.println(Info.Outputquery);
        Unit = BFC.nextLine();

        System.out.println(Info.Bank);
        BankOption = BFC.nextLine();//converts string to boolean for save function
        if (BankOption.equalsIgnoreCase ("y")|| BankOption.equalsIgnoreCase ("yes")){
            BankOptionB=true;}

            while (true) {
            Count++;//calculation counter
            System.out.println("\tCalc #" + Count);


            //collects user input for calculations
            System.out.println(" Enter Thickness (inches)");
            Thickness = BFC.nextDouble();
            System.out.println(" Width (inches)");
            Width = BFC.nextDouble();
            System.out.println(" Length (feet)");
            Length = BFC.nextDouble();
            System.out.println(" Number of boards");
            Boards = BFC.nextDouble();
            System.out.println(" Waste percentage (i.e. 50=50%)");
            Waste = BFC.nextDouble();


            Core.Output();}
    }
}
